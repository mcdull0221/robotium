<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">

            <gradient
                android:startColor="#1E4592"
                android:endColor="#1E4592"
                android:angle="270"/>
            <corners
                android:radius="15dp"/>
            <size
                android:width="27dp"
                android:height="27dp" />

        </shape>
    </item>

    <item android:state_checked="false">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">

            <gradient
                android:startColor="#5E95CD"
                android:endColor="#5E95CD"
                android:angle="270"/>
            <corners
                android:radius="15dp"/>
            <size
                android:width="27dp"
                android:height="27dp" />

        </shape>
    </item>

</selector>